# {{ ansible_managed }}
[Unit]
Description=PiExperience Chair videoplayer module

[Service]
ExecStart={{ target_directory }}/venv/bin/python3 {{ target_directory }}/src/videoplayer.py
WorkingDirectory={{ target_directory }}
Restart=always
RestartSec=5
KillSignal=SIGTERM
Type=simple
StandardOutput=journal
StandardError=journal
SyslogIdentifier=piexpchair_videoplayer
NotifyAccess=all
User={{ target_user }}
Group={{ target_user }}
Nice=1
Environment="DEBUG={{ service_debug }}"

[Install]
WantedBy=multi-user.target

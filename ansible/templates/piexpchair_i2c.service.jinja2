# {{ ansible_managed }}
[Unit]
Description=PiExperience Chair i2c module

[Service]
ExecStart={{ target_directory }}/venv/bin/python3 {{ target_directory }}/src/i2c.py
WorkingDirectory={{ target_directory }}
Restart=always
RestartSec=5
KillSignal=SIGTERM
Type=simple
StandardOutput=journal
StandardError=journal
SyslogIdentifier=piexpchair_i2c
NotifyAccess=all
User={{ target_user }}
Group={{ target_user }}
Nice=1

[Install]
WantedBy=multi-user.target

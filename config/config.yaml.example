---

mqtt:
  host: localhost
  port: 1883
  base_topic: exchair

videoplayer:
  media_path: /home/pi/media
  rc_host: localhost
  rc_port: 9999
  rc_password: ladida

i2c:
  input:
    play:
      address: 3
      pin: 1
    stop:
      address: 3
      pin: 1
    next:
      address: 3
      pin: 1
    prev:
      address: 3
      pin: 1

  output:
    fan1:
      address: 3
      pin: 1
    fan2:
      address: 3
      pin: 1

scenes:
  - name: desert
    file: desert.mpg
    i2c_outputs:
      fan1: true
      fan2: false
      heat1: true
      heat2: false
    duration: 3

  - name: ice
    file: ice.mpg
    i2c_outputs:
      fan1: true
      fan2: false
      heat1: true
      heat2: false
    duration: 3
---
videoplayer:
  media_path: /home/{{ target_user }}/media/
  rc_socket: /tmp/vlc_rc.sock

i2c:
  input:
    play:
      address: 0x27
      pin: 0
    stop:
      address: 0x27
      pin: 1
    next:
      address: 0x27
      pin: 2
    prev:
      address: 0x27
      pin: 3
    shutdown:
      address: 0x27
      pin: 4

  output:
    fan1:
      address: 0x23
      pin: 0
    fan2:
      address: 0x23
      pin: 1
    massage:
      address: 0x23
      pin: 2
    heat1:
      address: 0x23
      pin: 3
    heat2:
      address: 0x23
      pin: 4

  arduino_devices:
    arduino1_output1:
      address: 0x20
      pin: 0
    arduino1_output2:
      address: 0x20
      pin: 1
    arduino2_output1:
      address: 0x21
      pin: 0
    arduino2_output2:
      address: 0x21
      pin: 1

wled_styles:
  orange_warm:
    rgb: [255, 140, 0]
    effect_id: 0
    speed: 128
    intensity: 255
  orange_dark:
    rgb: [255, 50, 0]
    effect_id: 5
    speed: 200
    intensity: 180

idle:
  file: idle.mp4
  i2c_outputs:
    massage: false
    heat1: false
    heat2: false
  arduino_outputs:
    arduino1_output1: 0
    arduino1_output2: 0
  wled_outputs:
    strip1: orange_warm
    strip2: orange_dark

scenes:
  - name: desert
    file: desert.mp4
    image: desert_inactive.jpg
    image_active: desert_active.jpg
    duration: 30.321
    timed_outputs:
      - start_time: 0.0
        i2c_outputs:
          massage: true
          heat1: false
          heat2: true
        arduino_outputs:
